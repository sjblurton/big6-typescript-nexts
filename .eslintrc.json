{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended",
    "airbnb",
    "airbnb/hooks",
    "prettier",
    "stylelint-config-prettier",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "quotes": ["error", "double"],
    "react/jsx-filename-extension": [1, {"extensions": [".tsx"]}],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
    ],
    "prettier/prettier": "error"
  }
}
